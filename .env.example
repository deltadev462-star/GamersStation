# ===========================================
# Gamers Station Marketplace API Configuration
# ===========================================

# Application Configuration
SPRING_PROFILE=prod

# Database Configuration
DB_NAME=gamers_station_marketplace
DB_USERNAME=marketplace_user
DB_PASSWORD=change_this_secure_password_in_production
DB_URL=jdbc:mysql://mysql:3306/gamers_station_marketplace?useSSL=false&allowPublicKeyRetrieval=true&serverTimezone=UTC

# JWT Configuration (Generate new secrets for production!)
JWT_SECRET=change_this_to_a_very_long_random_string_min_64_characters_for_production
JWT_ACCESS_EXPIRATION=900000
JWT_REFRESH_EXPIRATION=604800000
JWT_ISSUER=gamers-station

# AWS S3 Configuration (for media storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET_NAME=gs-marketplace
AWS_S3_REGION=us-east-1
AWS_CLOUDFRONT_DOMAIN=your_cloudfront_domain

# Ably Configuration (for real-time messaging)
ABLY_API_KEY=your_ably_api_key_here

# WebSocket CORS Configuration
WEBSOCKET_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
